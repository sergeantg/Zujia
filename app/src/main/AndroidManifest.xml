    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".activity.custom.CustomMainActivity"
            android:label="@string/title_activity_custom_main"
            android:theme="@style/DarkThem" >
        </activity>
        <activity
            android:name=".activity.custom.HousesListActivity"
            android:label="@string/title_activity_houses_list" >
        </activity>
        <activity
            android:name=".activity.custom.HousesMapActivity"
            android:label="@string/title_activity_houses_map" >
        </activity>
        <activity
            android:name=".activity.custom.CustomCertificationActivity"
            android:label="@string/title_activity_custom_certification" >
        </activity>
        <activity
            android:name=".activity.custom.CustomInfoActivity"
            android:label="@string/title_activity_custom_info" >
        </activity>
        <activity
            android:name=".activity.custom.CustomPostWantActivity"
