<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    <!--</style>-->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="DarkThem" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="WithMarginMainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ItemStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemLeftIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ItemRightIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ItemSplitter">
        <item name="android:background">#ffcccccc</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
       <!-- <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>-->
    </style>

    <style name="InlineIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_span_line</item>
        <item name="android:layout_marginBottom">@dimen/margin_span_line</item>
        <item name="android:layout_marginLeft">@dimen/margin_span_inline</item>
        <item name="android:layout_marginRight">@dimen/margin_span_inline</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="MainLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">1dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textColor">@drawable/w_b_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="LineButton">
        <item name="android:background">@drawable/line_button_selector</item>
        <item name="android:drawableTop">@drawable/gray_line</item>
        <item name="android:drawableBottom">@drawable/gray_line</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="RingButton">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ring_button_selector</item>
    </style>

</resources>
