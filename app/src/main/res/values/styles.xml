<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
    <!--</style>-->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
    </style>

    <style name="WithMarginMainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ItemStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemLeftIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ItemRightIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ItemSplitter">
        <item name="android:background">@color/grey_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.6dp</item>
    </style>
    <style name="ItemGroupSplitter">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">15dp</item>
    </style>
    <style name="VerticalItemSplitter">
        <item name="android:background">@color/brown</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="InlineIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_span_line</item>
        <item name="android:layout_marginBottom">@dimen/margin_span_line</item>
        <item name="android:layout_marginLeft">@dimen/margin_span_inline</item>
        <item name="android:layout_marginRight">@dimen/margin_span_inline</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <style name="MainLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">1dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:textColor">@drawable/w_b_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/medium_text</item>
       <item name="android:button">@null</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="LineButton">
        <item name="android:background">@drawable/line_button_selector</item>
        <item name="android:drawableTop">@drawable/gray_line</item>
        <item name="android:drawableBottom">@drawable/gray_line</item>
        <item name="android:drawableRight">@drawable/arrow_right</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="RingButton">
        <item name="android:padding">10dp</item>
        <!--<item name="android:background">@drawable/ring_button_selector</item>-->
        <item name="android:background">@color/white</item>
    </style>

    <style name="Tab_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="service_menu_title_font">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textColor">@color/brown</item>
    </style>
    <style name="service_menu_des_font">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:drawableLeft">@drawable/newspaper</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="ItemTextStyle.me_item_text">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>
    <style name="ItemTextStyle.me_item_hint_text">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/grey_font</item>
    </style>
    <style name="MainActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/arrow_left</item>
        <item name="android:background">@color/brown</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:icon">@drawable/me</item>
    </style>
    <style name="HouseInfoTableRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="HouseInfoTableRowContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="edit_box">
        <item name="android:background">@drawable/edit_box_selector</item>
    </style>
    <style name="radio_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
</resources>
