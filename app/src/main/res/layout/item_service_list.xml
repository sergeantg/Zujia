<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceLogo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/service_logo" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceTitle"
        android:layout_toRightOf="@+id/serviceLogo"
        android:textSize="@dimen/large_text"
        android:textColor="@color/brown"
        android:text="天津鸿运搬家公司"
        android:layout_above="@+id/serviceDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceDescription"
        android:layout_toRightOf="@+id/serviceLogo"
        android:textSize="@dimen/small_text"
        android:textColor="@color/grey_font"
        android:layout_centerVertical="true"
        android:text="本公司专业承接居民搬家，学生搬家，小 面搬家，拆装各种家具，京津唐快运"
        android:layout_marginTop="5dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceRate"
        android:layout_toRightOf="@+id/serviceLogo"
        android:layout_below="@+id/serviceDescription"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall"
        android:progressDrawable="@drawable/ratingbar_style"
        android:rating="4"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/serviceLogo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>