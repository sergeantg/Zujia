<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVTitle"
            android:textSize="@dimen/extra_large_text"
            android:text="八里台-地铁旁温馨白领公寓" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVDistance"
            android:textSize="@dimen/medium_text"
            android:text="距你当前位置1.4km"
            android:drawableLeft="@drawable/location"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/relativ_view">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgVDetail"
                    android:scaleType="fitStart"
                    android:nestedScrollingEnabled="false"
                    android:adjustViewBounds="true"
                    android:src="@drawable/house_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/money"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/large_text"
                    android:textColor="@color/font_orange"
                    android:layout_margin="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/date"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/money"
                    android:layout_margin="10dp"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVDetailDes"
                android:textSize="@dimen/medium_text"
                android:text="2室1厅  76m   有电梯  近装修"
                android:layout_below="@+id/relativ_view"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgVAvater"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/avater_round_me"
                    app:border_width="2dp"
                    app:border_color="@color/me_avater_circle"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceRate"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressDrawable="@drawable/ratingbar_style"
                    android:rating="4"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="false"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>