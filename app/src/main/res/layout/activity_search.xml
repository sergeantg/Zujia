<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zujia.android.zujia.activity.custom.SearchActivity">


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="1" />

    <EditText
        style="@style/ItemStyle"
        android:layout_height="40dp"
        android:id="@+id/editText_search_key"
        android:hint="@string/hint_search_search" />

    <RadioGroup
        style="@style/ItemStyle"
        android:id="@+id/radioGroup_search"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_one_room"
            android:id="@+id/radio_one_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            android:gravity="center"
            android:background="@drawable/radio_button_selector"
            android:padding="5dp"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_two_rooms"
            android:id="@+id/radio_two_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            android:gravity="center"
            android:drawable="@drawable/radio_selector"
            android:background="@drawable/radio_button_selector"
            android:padding="5dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_three_rooms"
            android:id="@+id/radio_three_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            android:gravity="center"
            android:background="@drawable/radio_button_selector"
            android:padding="5dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_more_rooms"
            android:id="@+id/radio_more_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            android:gravity="center"
            android:background="@drawable/radio_button_selector"
            android:padding="5dp" />
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
        style="@style/ItemStyle"
        android:text="@string/btn_search_search"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/searchLayout"
        android:onClick="searchClick"
        android:background="@color/orange"
        android:gravity="center" />

    <Button
        style="@style/ItemStyle"
        android:text="@string/btn_search_around"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button2"
        android:onClick="aroundClick"
        android:gravity="center"
        android:background="@color/orange" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="1" />

</LinearLayout>
