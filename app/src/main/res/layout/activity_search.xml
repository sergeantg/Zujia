<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zujia.android.zujia.activity.custom.SearchActivity">

    <LinearLayout
        style="@style/WithMarginMainLayoutStyle"
        android:layout_centerHorizontal="true"
        android:id="@+id/searchLayout"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/editText_search_key" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_search"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_one_room"
                android:id="@+id/radio_one_room"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_two_rooms"
                android:id="@+id/radio_two_room"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_three_rooms"
                android:id="@+id/radio_three_room"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_more_rooms"
                android:id="@+id/radio_more_room"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_search_search"
        android:id="@+id/button2"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/searchLayout"
        android:onClick="searchClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_search_around"
        android:id="@+id/button3"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button2"
        android:onClick="aroundClick"/>

</RelativeLayout>
