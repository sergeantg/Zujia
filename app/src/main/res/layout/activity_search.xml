<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zujia.android.zujia.activity.SearchActivity">


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="4" />

    <EditText
        style="@style/ItemStyle"
        android:drawableLeft="@drawable/search"
        android:layout_height="40dp"
        android:id="@+id/editText_search_key"
        android:hint="@string/hint_search_search"
        android:textSize="@dimen/medium_text" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="1" />

    <RadioGroup
        style="@style/ItemStyle"
        android:id="@+id/radioGroup_search"
        android:orientation="horizontal"
        android:background="@drawable/button_group_backgroud">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_one_room"
            android:id="@+id/radio_one_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            style="@style/RadioButton"
            android:checked="true" />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_two_rooms"
            android:id="@+id/radio_two_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            style="@style/RadioButton"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_three_rooms"
            android:id="@+id/radio_three_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            style="@style/RadioButton"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_more_rooms"
            android:id="@+id/radio_more_room"
            android:button="@null"
            android:layout_weight="1"
            android:onClick="radioButtonClick"
            style="@style/RadioButton"/>
    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        style="@style/Button"
        android:text="@string/btn_search_search"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/searchLayout"
        android:onClick="searchClick"/>

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="1" />

    <Button

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/LineButton"
        android:text="@string/btn_search_around"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button2"
        android:onClick="aroundClick"
        android:gravity="center" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_weight="4" />

</LinearLayout>
