<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zujia.android.zujia.activity.SigninActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您贵姓"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/lastName"
                        style="@style/edit_box"
                        android:layout_weight="2"/>
                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:orientation="horizontal"
                        android:background="@drawable/button_group_backgroud"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp">
                        <RadioButton
                            style="@style/RadioButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="先生"
                            android:layout_weight="1"
                            android:onClick="genderClick"
                            android:checked="true"
                            android:id="@+id/radio_gender_male"/>
                        <RadioButton
                            style="@style/RadioButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="女士"
                            android:id="@+id/radio_gender_female"
                            android:layout_weight="1"
                            android:onClick="genderClick"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    style="@style/edit_box"
                    android:id="@+id/phone"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="每个手机号只可注册一个角色，不可重复注册"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/grey_font" />

            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        style="@style/edit_box"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/verification"/>
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        style="@style/Button"
                        android:text="发送验证码"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="20dp"
                        android:onClick="verificationSendClick"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    style="@style/edit_box"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/email"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建密码"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    style="@style/edit_box"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/password1"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    style="@style/edit_box"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/password2"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择身份"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />

                <RadioGroup
                    android:orientation="horizontal"
                    android:background="@drawable/button_group_backgroud"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="我是房东"
                        android:layout_weight="1"
                        android:onClick="typeClick"
                        android:checked="true"
                        android:id="@+id/radio_type_lord"/>
                    <RadioButton
                        style="@style/RadioButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="我是房客"
                        android:layout_weight="1"
                        android:onClick="typeClick"
                        android:id="@+id/radio_type_custom"/>
                </RadioGroup>
            </LinearLayout>

            <View style="@style/ItemSplitter"/>

            <CheckBox
                style="@style/ItemStyle"
                android:text="我已同意租家网房客协议"
                android:id="@+id/agree"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/brown"/>
            <LinearLayout
                style="@style/ItemStyle"
                android:orientation="horizontal">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/Button"
                    android:text="注册"
                    android:id="@+id/submit"
                    android:onClick="submitClick" />
                <TextView
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="已有租家网账号？立即登陆"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/brown" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
