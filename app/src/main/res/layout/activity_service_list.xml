<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zujia.android.zujia.activity.ServiceListActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceLogo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceTitle"
        android:layout_toRightOf="@+id/serviceLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/serviceDescription"
        android:layout_toRightOf="@+id/serviceLogo"
        android:layout_below="@+id/serviceTitle" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serviceRate"
        android:layout_toRightOf="@+id/serviceLogo"
        android:layout_below="@+id/serviceDescription"
        android:rating="5" />

</RelativeLayout>
