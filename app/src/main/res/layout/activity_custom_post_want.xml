<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zujia.android.zujia.ui.custom.CustomPostWantActivity"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ItemStyle"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtV_post_want_location"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/brown" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTxtLocation"
            style="@style/edit_box"
            android:layout_marginTop="5dp" />
    </LinearLayout>


    <LinearLayout
        style="@style/ItemStyle"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtV_post_want_money"
            android:textColor="@color/brown"
            android:textSize="@dimen/medium_text" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/eTxtMoney"
                android:numeric="integer"
                style="@style/edit_box"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtV_post_want_tag"
                android:layout_weight="1"
                android:textColor="@color/brown"
                android:textSize="@dimen/medium_text"
                android:gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/ItemStyle"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtV_post_want_date"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/brown" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:id="@+id/eTxtDate"
            style="@style/edit_box"
            android:layout_marginTop="5dp" />

    </LinearLayout>


    <LinearLayout
        style="@style/ItemStyle"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtV_post_type"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/brown" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:background="@drawable/button_group_backgroud"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RadioButton
                style="@style/RadioButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_one_room"
                android:id="@+id/radioButton"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick"
                android:checked="true" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_two_rooms"
                android:id="@+id/radioButton2"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_three_rooms"
                android:id="@+id/radioButton3"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_more_rooms"
                android:id="@+id/radioButton4"
                android:button="@null"
                android:layout_weight="1"
                android:onClick="radioButtonClick" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        style="@style/ItemStyle"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtV_post_want_other"
            android:textSize="@dimen/medium_text"
            android:textColor="@color/brown" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTxtOther"
            style="@style/edit_box"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:text="@string/btn_custom_certification_submit"
        android:id="@+id/btnSubmit"
        android:onClick="submitClick"/>



</LinearLayout>
