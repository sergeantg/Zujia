<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom.CustomMainActivity">

    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:id="@+id/buttondd" />
                    <fragment
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:name="io.rong.imkit.fragment.ConversationFragment"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="add"
                            android:onClick="addClick"/>
                        <RelativeLayout
                            android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:onClick="menuClick"
                            android:id="@+id/layout_rent">

                            <ImageView
                                style="@style/ItemLeftIconStyle"
                                android:src="@drawable/rectangle_colorful_1"
                                android:id="@+id/logo1"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/rent_main" android:textSize="@dimen/large_text"
                                android:layout_toEndOf="@id/logo1" android:layout_marginTop="6dp"
                                android:id="@+id/txtVRentBang"/>

                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/rent_list_main" android:textSize="@dimen/small_text"
                                android:layout_toEndOf="@id/logo1" android:layout_below="@+id/txtVRentBang"
                                android:textColor="@color/font_orange"
                                android:id="@+id/rent_hint" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right"
                                android:id="@+id/rent_arrow" />

                        </RelativeLayout>

                        <View style="@style/ItemSplitter" />

                        <RelativeLayout
                            android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:onClick="menuClick"
                            android:id="@+id/layout_live">

                            <ImageView
                                style="@style/ItemLeftIconStyle"
                                android:src="@drawable/rectangle_colorful_2"
                                android:id="@+id/logo2"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/live_main" android:textSize="@dimen/large_text"
                                android:layout_toEndOf="@id/logo2" android:layout_marginTop="6dp"
                                android:id="@+id/txtVLiveBang"/>

                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/live_list_main" android:textSize="@dimen/small_text"
                                android:layout_toEndOf="@id/logo2" android:layout_below="@+id/txtVLiveBang"
                                android:textColor="@color/font_orange"
                                android:id="@+id/live_hint" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right"
                                android:id="@+id/live_arrow" />

                        </RelativeLayout>

                        <View style="@style/ItemSplitter" />

                        <RelativeLayout
                            android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:onClick="menuClick"
                            android:id="@+id/layout_appliance">

                            <ImageView
                                style="@style/ItemLeftIconStyle"
                                android:src="@drawable/rectangle_colorful_3"
                                android:id="@+id/logo3"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/appliance_main" android:textSize="@dimen/large_text"
                                android:layout_toEndOf="@id/logo3" android:layout_marginTop="6dp"
                                android:id="@+id/txtVApplianceBang"/>

                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/appliance_list_main" android:textSize="@dimen/small_text"
                                android:layout_toEndOf="@id/logo3" android:layout_below="@+id/txtVApplianceBang"
                                android:textColor="@color/font_orange"
                                android:id="@+id/appliance_hint" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right"
                                android:id="@+id/appliance_arrow" />

                        </RelativeLayout>

                        <View style="@style/ItemSplitter" />

                        <RelativeLayout
                            android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:onClick="menuClick"
                            android:nestedScrollingEnabled="false"
                            android:id="@+id/layout_furniture">

                            <ImageView
                                style="@style/ItemLeftIconStyle"
                                android:src="@drawable/rectangle_colorful_4"
                                android:id="@+id/logo4"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/furniture_main" android:textSize="@dimen/large_text"
                                android:layout_toEndOf="@id/logo4" android:layout_marginTop="6dp"
                                android:id="@+id/txtVFurnitureBang"/>

                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/furniture_list_main" android:textSize="@dimen/small_text"
                                android:layout_toEndOf="@id/logo4" android:layout_below="@+id/txtVFurnitureBang"
                                android:textColor="@color/font_orange"
                                android:id="@+id/furniture_hint" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right"
                                android:id="@+id/furniture_arrow" />

                        </RelativeLayout>

                        <View style="@style/ItemSplitter" />

                        <RelativeLayout
                            android:layout_width="fill_parent" android:layout_height="wrap_content"
                            android:onClick="menuClick"
                            android:id="@+id/layout_life">

                            <ImageView
                                style="@style/ItemLeftIconStyle"
                                android:src="@drawable/rectangle_colorful_5"
                                android:id="@+id/logo5"/>
                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/life_main" android:textSize="@dimen/large_text"
                                android:layout_toEndOf="@id/logo5" android:layout_marginTop="6dp"
                                android:id="@+id/txtVLifeBang"/>

                            <TextView
                                android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="@string/life_list_main" android:textSize="@dimen/small_text"
                                android:layout_toEndOf="@id/logo5" android:layout_below="@+id/txtVLifeBang"
                                android:textColor="@color/font_orange"
                                android:id="@+id/life_hint" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right"
                                android:id="@+id/life_arrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/menu_container"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/brown">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton4"
                            android:layout_toLeftOf="@+id/imgVAvater"
                            android:src="@drawable/camera"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:layout_margin="10dp" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/imgVAvater"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/avater_round_me"
                            app:border_width="2dp"
                            app:border_color="#FF000000"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp" />
                        <TextView
                            android:id="@+id/txtVName"
                            android:text="李先生"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgVAvater"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/medium_text"
                            android:textColor="@color/white"
                            android:layout_margin="10dp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageButton5"
                            android:layout_toRightOf="@+id/imgVAvater"
                            android:src="@drawable/write"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:layout_margin="10dp" />

                    </RelativeLayout>

                    <LinearLayout style="@style/MainLayoutStyle" >

                        <RelativeLayout style="@style/ItemStyle"
                            android:onClick="postWantClick">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_postWant"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />
                        </RelativeLayout>

                        <RelativeLayout style="@style/ItemStyle"
                            android:onClick="zujiabangClick">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_growth"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/MainLayoutStyle" >

                        <RelativeLayout style="@style/ItemStyle"
                            android:onClick="settingClick">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_setting"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />
                        </RelativeLayout>

                        <RelativeLayout style="@style/ItemStyle"
                            android:onClick="feedbackClick">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_feedback"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />
                        </RelativeLayout>

                        <View style="@style/ItemSplitter" />

                        <RelativeLayout style="@style/ItemStyle"
                            android:onClick="aboutClick">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_about"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/MainLayoutStyle"
                        android:onClick="logoutClick">

                        <RelativeLayout style="@style/ItemStyle">

                            <TextView
                                style="@style/ItemTextStyle"
                                android:text="@string/btn_logout"
                                android:textSize="@dimen/medium_text" />

                            <ImageView
                                style="@style/ItemRightIconStyle"
                                android:src="@drawable/arrow_right" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown"></TabWidget>

        </LinearLayout>
    </TabHost>

</RelativeLayout>
